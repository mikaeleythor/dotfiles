# Open terminal
super + Return
	alacritty

# Open firefox
super + f
	firefox

# Reload sxhkd configuration files
super + Escape
	pkill -USR1 -x sxhkd

# Quit or restart bspwm
super + alt + {q,r}
	bspc {quit,wm-r}

# Set window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}
